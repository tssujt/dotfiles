{
    "editor.cursorStyle": "line",
    "editor.fontSize": 19,
    "editor.fontFamily": "'Operator Mono'",
    "editor.largeFileOptimizations": true,
    "editor.lineHeight": 20,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80, 120],
    "editor.suggestSelection": "first",
    "editor.wordWrap": "bounded",
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "Cargo.lock": "toml",
        "Cargo.toml": "toml"
    },
    "files.autoSave": "off",
    "files.autoSaveDelay": 10000,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.idea": true
    },
    "eslint.autoFixOnSave": true,
    "eslint.trace.server": "messages",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "leetcode.defaultLanguage": "python3",
    "leetcode.endpoint": "leetcode",
    "prettier.disableLanguages": [],
    "prettier.eslintIntegration": false,
    "prettier.stylelintIntegration": true,
    "python.analysis.logLevel": "Trace",
    "python.analysis.openFilesOnly": false,
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "80"
    ],
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--format=pylint",
        "--count",
        "--verbose"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
    "python.linting.lintOnSave": true,
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "python.pipenvPath": "/usr/local/bin/pipenv",
    "python.pythonPath": "${env:HOME}/.pyenv/shims/python",
    "python.sortImports.path": "${env:HOME}/.pyenv/shims/isort",
    "python.sortImports.args": [],
    "python.terminal.activateEnvironment": true,
    "python.testing.cwd": "tests",
    "python.testing.pytestEnabled": true,
    "python.venvPath": "${workspaceFolder}",
    "python.venvFolders": [
        "${workspaceFolder}/venv"
    ],
    "pythonTestExplorer.testFramework": "pytest",
    "rust-analyzer.enableCargoWatchOnStartup": "enabled",
    "rust-analyzer.highlightingOn": true,
    "rust-analyzer.lruCapacity": 1000,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.macOptionIsMeta": true,
    "window.openFilesInNewWindow": "on",
    "window.openFoldersInNewWindow": "on",
    "window.zoomLevel": 2,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Darcula",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // Enable per-language
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.formatOnSave": true
    },
}
